<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_detain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/Margin_Top">
    <!--I want To No View pager -->
    <com.example.xyzreader.ui.customViews.NoSwipeViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/action_up"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:elevation="@dimen/back_button_elevation"
        android:paddingEnd="@dimen/back_button_padding"
        android:paddingStart="@dimen/back_button_padding"
        android:src="@drawable/ic_arrow_back" />
</FrameLayout>